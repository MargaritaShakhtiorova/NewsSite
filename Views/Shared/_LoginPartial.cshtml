@using Microsoft.AspNetCore.Identity
@using Diploma_v1._1.Areas.Identity.Data

@inject SignInManager<Author> SignInManager
@inject UserManager<Author> UserManager

<div class="nav-item dropdown navbar-nav m-auto">
    <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown"><img src="~/img/user.png" width="32" height="32"></a>
    <div class="dropdown-menu">
        @if (SignInManager.IsSignedIn(User))
        {
            <a id="manage" class="dropdown-item" @*asp-area="Identity" asp-page="/Account/Manage/Index"*@ href="#"
           title="Manage">@UserManager.GetUserAsync(User).Result.Surname @UserManager.GetUserAsync(User).Result.Name </a>
            <a id="usertasks" class="dropdown-item" asp-controller="News" asp-action="Index" title="Tasks">Добавить новость</a>


            <form id="logoutForm" class="dropdown-item" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout" type="submit" class="dropdown-item">Выйти из аккаунта</button>
            </form>
         }
        else
        {
            <a class="dropdown-item" id="register" asp-area="Identity" asp-page="/Account/Register">Зарегистрироваться</a>
            <a class="dropdown-item" id="login" asp-area="Identity" asp-page="/Account/Login">Войти в аккаунт</a>
        }
    </div>
</div>
