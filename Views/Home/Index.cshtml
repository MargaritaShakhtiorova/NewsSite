                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-6 tn-right">
                <div class="row">
                    @for (int i = 1; i < 5; i++)
                    {
                        <div class="col-md-6">
                            <div class="tn-img">
                                <img src="data:image;base64,@System.Convert.ToBase64String(Model[i].ImageData)" whidth="200" height="160" />
                                <div class="tn-content">
                                    <div class="tn-content-inner">
                                        <a class="tn-date" href=""><i class="far fa-clock"></i>@Html.DisplayFor(modelItem => modelItem[i].TimeOfCreating)</a>
                                        <a class="tn-title" asp-action="OnePage" asp-route-id="@Model[i].Id">@Html.DisplayFor(modelItem => modelItem[i].Title)</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Top News End-->
<!-- Category News Start-->
@{
    string[] categoryNames = { "Политика", "Экономика", "Проишествия", "Культура", "Технологии", "Общество", "Спорт" };
}
@foreach (var catName in categoryNames)
{
    List<News> catModel = Model.Where(x => x.Category.Equals(catName)).ToList();
    if (catModel.Count < 4)
        continue;

    <div class="cat-news">
        <div class="container-fluid">
            <h2><i class="fas fa-align-justify"></i>@catName</h2>
            <div class="row cn-slider">
                @for (int i = 0; i < 4; i++)
                {
                    <div class="col-md-3">
                        @{
                            string subTitle;
                            if (catModel[i].Title.Length > 40)
                                subTitle = catModel[i].Title.Substring(0, 37) + "...";
                            else subTitle = catModel[i].Title;
                        }
                        <div class="cn-img">
                            <img src="data:image;base64,@System.Convert.ToBase64String(catModel[i].ImageData)" whidth="200" height="160" />
                            <div class="cn-content">
                                <div class="cn-content-inner">
                                    <a class="cn-date" href=""><i class="far fa-clock"></i>@catModel[i].TimeOfCreating</a>
                                    <a class="cn-title" asp-action="OnePage" asp-route-id="@catModel[i].Id">@subTitle</a>
                                </div>
                            </div>
                        </div>

                    </div>
                }
            </div>
        </div>
    </div>
}
<!-- Category News End-->

